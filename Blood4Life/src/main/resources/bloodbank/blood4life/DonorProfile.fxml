<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="bloodbank.blood4life.DonorProfileController">
    <VBox spacing="10.0" alignment="TOP_CENTER" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
        <Label fx:id="donorDetailsLabel" text="Donor Details" />
        <TextArea fx:id="chatTextArea" promptText="Type your message here..." prefHeight="200.0" />
        <Button text="Send Message" onAction="#sendMessage"/>
    </VBox>
</AnchorPane>
